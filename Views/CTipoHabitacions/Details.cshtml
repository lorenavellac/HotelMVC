@model HotelMVC.Models.CTipoHabitacion

@{
    ViewBag.Title = "Details";
}

<h2>Detalle Habitación</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Descripción</dt>
        <dd>@Html.DisplayFor(model => model.Descripcion)</dd>
    </dl>
</div>
<p>
    <button class="btn" title="Editar" onclick="location.href='@Url.Action("Edit", new { id = Model.IdTipoHabitacion })';return false;">
        <img src="~/Images/editar.png" alt="editar" style="width:24px;" />
    </button>
    <button class="btn" title="Regresar" onclick="location.href='@Url.Action("Index")';return false;">
        <img src="~/Images/atras.png" alt="atras" style="width:24px;" />
    </button>
   
</p>
