@model HotelMVC.Models.Habitaciones

@{
    ViewBag.Title = "Delete";
}

<h2>Borrar Habitacion</h2>

<div>
    @if (ViewBag.Mensaje != null)
    {
        <div class='modal-dialog modal-sm'>
            <div class='modal-content'>
                <div class='modal-header' style="background-color: #007bff; color: #fff;">
                    <h4 class='modal-title'>Información</h4>
                </div>
                <div class='modal-body'>
                    <p>@ViewBag.Mensaje</p>
                </div>
                <div class='modal-footer'>
                    <button class="btn" title="Regresar" onclick="location.href='@Url.Action("Index", "Habitaciones")';return false;">
                        Cerrar
                    </button>
                </div>
            </div>
        </div>
    }
    else
    {
        <hr />
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.IdHabitacion)</dt>
            <dd>@Html.DisplayFor(model => model.IdHabitacion)</dd>
            <dt>@Html.DisplayNameFor(model => model.Tarifa)</dt>
            <dd>@Html.DisplayFor(model => model.Tarifa)</dd>
            <dt>@Html.DisplayNameFor(model => model.NumeroPersonas)</dt>
            <dd>@Html.DisplayFor(model => model.NumeroPersonas)</dd>
            <dt>@Html.DisplayNameFor(model => model.Observaciones)</dt>
            <dd>@Html.DisplayFor(model => model.Observaciones)</dd>
            <dt>@Html.DisplayNameFor(model => model.CEstados.Descripcion)</dt>
            <dd>@Html.DisplayFor(model => model.CEstados.Descripcion)</dd>
            <dt>@Html.DisplayNameFor(model => model.CEstados1.Descripcion)</dt>
            <dd>@Html.DisplayFor(model => model.CEstados1.Descripcion)</dd>
            <dt>@Html.DisplayNameFor(model => model.CTipoHabitacion.Descripcion)</dt>
            <dd>@Html.DisplayFor(model => model.CTipoHabitacion.Descripcion)</dd>

        </dl>
    }
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button class="btn" title="Regresar" onclick="location.href='@Url.Action("Index", "Habitaciones")';return false;">
                <img src="~/Images/atras.png" alt="atras" style="width:24px;" />
            </button>
            <button class="btn" title="Eliminar" type="submit">
                <img src="~/Images/eliminar.png" alt="eliminar" style="width:24px;" />
            </button>
        </div>
    }
</div>
