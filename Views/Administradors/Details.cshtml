@model HotelMVC.Models.Administrador

@{
    ViewBag.Title = "Detalles";
}
<h2>Detalle del Administrador</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Tipo Id.</dt>
        <dd>@Html.DisplayFor(model => model.IdTipoIdentificacion)</dd>
        <dt>Nro. Identificación</dt>
        <dd>@Html.DisplayFor(model => model.NumeroIdentificacion)</dd>
        <dt>Nombres</dt>
        <dd>@Html.DisplayFor(model => model.Nombres)</dd>
        <dt>Apellidos</dt>
        <dd>@Html.DisplayFor(model => model.Apellidos)</dd>
        <dt>Teléfono</dt>
        <dd>@Html.DisplayFor(model => model.Telefono)</dd>
        <dt>Correo</dt>
        <dd>@Html.DisplayFor(model => model.Correo)</dd>
        <dt>User</dt>
        <dd>@Html.DisplayFor(model => model.User)</dd>
        <dt>Password</dt>
        <dd>@Html.DisplayFor(model => model.Password)</dd>
        <dt>Observaciones</dt>
        <dd>@Html.DisplayFor(model => model.Observaciones)</dd>
        <dt>Estado</dt>
        <dd>@Html.DisplayFor(model => model.CEstados.Descripcion)</dd>
        <dt>Descripción</dt>
        <dd>@Html.DisplayFor(model => model.CTipoIdentificacion.Descripcion)</dd>
    </dl>
</div>
<p>
    <div class="form-actions no-color">
        <button class="btn" title="Regresar" onclick="location.href='@Url.Action("Index", "Administradors")';return false;">
            <img src="~/Images/atras.png" alt="atras" style="width:24px;" />
        </button>
        <button class="btn" title="Editar" onclick="location.href='@Url.Action("Edit", "Administradors", new { id = Model.IdAdministrador })';return false;">
            <img src="~/Images/editar.png" alt="editar" style="width:24px;" />
        </button>

    </div>
 </p>
