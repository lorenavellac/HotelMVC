@model HotelMVC.Models.CEstados

@{
    ViewBag.Title = "Details";
}
<h2>Detalles</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Descripción</dt>
        <dd>@Html.DisplayFor(model => model.Descripcion)</dd>
        <dt>Categoria</dt>
        <dd>@Html.DisplayFor(model => model.Categoria)</dd>
    </dl>
</div>
<p>
    <button class="btn" title="Regresar" onclick="location.href='@Url.Action("Index", "CEstados")';return false;">
        <img src="~/Images/atras.png" alt="atras" style="width:24px;" />
    </button>
    <button class="btn" title="Editar" onclick="location.href='@Url.Action("Editar", "CEstados", new { id = Model.IdEstado })';return false;">
        <img src="~/Images/editar.png" alt="editar" style="width:24px;" />
    </button>   
</p>
