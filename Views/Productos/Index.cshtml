@model IEnumerable<HotelMVC.Models.Productos>

@{
    ViewBag.Title = "PRODUCTOS";
}

<h2>Productos</h2>

<p>
    <div class="row">
        <div class="input-group">
            <div class="col-sm-12">
                <button class="btn" title="Registrar" onclick="location.href='@Url.Action("Create", "PRODUCTOS")';return false;">
                    <img src="~/Images/nuevo.png" alt="nuevo" style="width:24px;" />
                </button>
            </div>
        </div>
    </div>
</p>
<table class="table">
    <tr>
        <th>RazonSocial</th>
        <th>Descripcion</th>
        <th>Codigo</th>
        <th>Precio</th>
        <th>Costo</th>
        <th>Existencia</th>
        <th>Observaciones</th>
        <th>Estado</th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Proveedores.RazonSocial)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Descripcion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Codigo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Precio)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Costo)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Existencia)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Observaciones)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CEstados.Descripcion)
    </td>

    <td>
        <div>
            <button class="btn" title="Editar" onclick="location.href='@Url.Action("Edit", "Productos", new { id = item.IdProducto })';return false;">
                <img src="~/Images/editar.png" alt="editar" style="width:16px;" />
            </button>
            <button class="btn" title="Detalle" onclick="location.href='@Url.Action("Details", "Productos", new { id = item.IdProducto })';return false;">
                <img src="~/Images/detalles.png" alt="detalle" style="width:16px;" />
            </button>
            <button class="btn" title="Eliminar" onclick="location.href='@Url.Action("Delete", "Productos", new { id = item.IdProducto })';return false;">
                <img src="~/Images/eliminar.png" alt="eliminar" style="width:16px;" />
            </button>
</div>
    </td>
</tr>
}

</table>
